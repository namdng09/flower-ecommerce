{
  "name": "flower-ecommerce",
  "version": "1.0.0",
  "scripts": {
    "lint": "eslint . --ext .ts,.tsx,.js,.mjs",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.mjs --fix",
    "check": "npm run check:client && npm run check:server",
    "check:client": "cd client && tsc -p tsconfig.app.json --noEmit",
    "check:server": "cd server && tsc --noEmit",
    "format": "prettier --write .",
    "prepare": "husky",
    "lint-staged": "lint-staged"
  },
  "lint-staged": {
    "client/**/*.{ts,tsx}": [
      "tsc-files --noEmit -p client/tsconfig.app.json",
      "npm run lint",
      "npm run format",
      "git add"
    ],
    "server/**/*.{ts,tsx}": [
      "bash -c 'npx tsc-files --noEmit -p server/tsconfig.json'",
      "npm run lint",
      "npm run format",
      "git add"
    ],
    "*.{js,mjs}": [
      "npm run lint",
      "npm run format",
      "git add"
    ],
    "package.json": [
      "npm run lint"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "description": "",
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.29.0",
    "@types/node": "^24.0.2",
    "eslint": "^9.29.0",
    "eslint-plugin-prettier": "^5.4.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.2.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.0.0",
    "prettier": "^3.5.3",
    "tsc-files": "^1.1.4",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.34.0"
  }
}
